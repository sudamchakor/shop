doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title #{docTitle}
        link(rel="stylesheet", href="/css/bootstrap.min.css")
        link(rel="stylesheet", href="/css/main.css")
        block styles
    body
        header.main-header
            nav.navbar.navbar-expand-lg.bg-darkgreen.navbar-dark
                div.container-fluid
                    a.navbar-brand(href="/") My Shop
                    button.navbar-toggler(type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation")
                        span.navbar-toggler-icon
                    div.collapse.navbar-collapse(id="navbarSupportedContent")
                        ul.navbar-nav.me-auto.mb-2.mb-lg-0.ml-auto
                            li.nav-item(class=(path==="/"?'active':''))
                                a.nav-link(aria-current="page" href="/") Shop
                            li.nav-item(class=(path==="admin/add-product"?'active':''))
                                a.nav-link(href="/admin/add-product") Add Product
        main.container.mt-3
            block content

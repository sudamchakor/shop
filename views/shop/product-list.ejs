	<%- include('../includes/head.ejs') %>
</head>
<body>
	<%- include('../includes/navigation.ejs')%>
		<% if (prods.length>0) { %>
			<div class="card-group">
				<% for(product of prods){ %>
				<div class="card product-card m-2">
					<div class="bg-dark w-100 h-50">
						<img
							class="product-card-img w-100 h-100"							
							src="<%= product.imageUrl %>"
							alt="Image Cap"
						/>
					</div>
					<div class="card-body">
						<h5 class="card-title"><%= product.title %></h5>
						<h5 class="card-title">$<%= product.price %></h5>
						<p class="card-text"><%= product.description %></p>
					</div>
					<div class="card-footer text-center">
						<a href="/product/<%= product._id %>" class="btn btn-primary float-end">Detials</a>
						<%- include('../includes/add-to-cart.ejs') %>                    
					</div>
				</div>
				<% } %>
			</div>
		<% }else{ %>
			<h1>No Products found</h1>
		<% } %>
<%- include('../includes/end.ejs') %>

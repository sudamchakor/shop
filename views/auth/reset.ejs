<%- include('../includes/head.ejs') %> 
    </head>
    <body>
        <%- include('../includes/navigation.ejs') %>
            <div class="row d-flex justify-content-center align-items-center">
                <div class="col col-xl-10">
                  <div class="card" style="border-radius: 1rem;">
                    <div class="row g-0">
                      
                      <div class="d-flex align-items-center">
                        <div class="card-body p-4 p-lg-5">          
                            <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Reset Password</h5>
                            <form action="/reset" method='POST'>
                              <% if(errorMessage){ %>
                                <div class="alert alert-danger" role="alert">
                                  <span><i class="fa fa-warning"></i>
                                    <%=errorMessage%>
                                  </span>
                                </div>
                              <% } %>
                                <div class="mb-4 field-set">
                                    <label class="form-label" for="email">Email address</label>
                                    <input type="email" id="email" name="email" class="form-control form-control-lg" />
                                </div>            
                                <div class="pt-1 mb-4">
                                  <input type="hidden" name="_csrf" value="<%= csrfToken%>">  
                                  <button class="btn btn-primary w-100 btn-lg btn-block" type="submit">Reset Password</button>
                                </div>            
                               
                                
                            </form>          
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
<%- include('../includes/end.ejs') %>
